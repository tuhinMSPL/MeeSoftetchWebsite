@model MeeSoftetchWebsite.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit user";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
