@model IEnumerable<MeeSoftetchWebsite.Models.Careers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.OpeningTitle)*@
                    Job Title
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.ExperienceYear)*@
                    Exp.(Year)
                </th>
                <th>
                    Exp.(Month)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.SkillsRequired)*@
                    Skills Required
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Description)*@
                    Description
                </th>
                <th>
                   @*Html.DisplayNameFor(model => model.IsOpen)*@
                    Open
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.JobPostingDate)*@
                    Posting Date
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.PostedByEmployee)*@
                    Posted by
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpeningTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExperienceYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExperienceMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SkillsRequired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsOpen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobPostingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostedByEmployee)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
